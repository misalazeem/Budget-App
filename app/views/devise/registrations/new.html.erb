<div class="navigation">
  <ul>
    <li><%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %></li>
    <h2>Sign up</h2>
    <li><%= link_to 'Sign In', new_user_session_path, class: "nav-link" %></li>
  </ul>
</div>
<div class="form-class">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :name, autocomplete: "name", autofocus: true, class: "", placeholder: "Enter Name" %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
    <%= f.submit "Sign up" %>
<% end %>
</div>
