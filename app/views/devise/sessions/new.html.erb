<div class="navigation">
  <ul>
    <li><%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %></li>
    <h2>Sign in</h2>
    <li><%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %></li>
  </ul>
</div>
<div class="form-class">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Password" %>


  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>
    <%= f.submit "Log in" %>

<% end %>
</div>