<div class="navigation">
  <ul>
    <li><%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %></li>
    <h2>Categories</h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>

<div class="categories-list">
  <% @categories.each do |category| %>
    <%= link_to category do %>
      <div class="category-item">
        <div class="category-left">
          <% if category.icon.present? %>
            <%= image_tag category.icon, alt: category.name, class: 'category-icon' %>
          <% end %>
          <h2><%= category.name %></h2>
        </div>
        <p>Total Amount: <%= category.purchases.sum(:amount) %></p>
      </div>
    <% end %>
  <% end %>
</div>
<div class="new-category">
  <div class="new-category-inner">
    <%= link_to "Add a New Category", new_category_path, class: "new-category-button" %>
  </div>
</div>