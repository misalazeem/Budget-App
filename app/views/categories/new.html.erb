<h1>Add a New Category</h1>

<%= form_with(model: @category, url: categories_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.text_field :icon %>
  </div>

  <div class="actions">
    <%= form.submit "Create Category" %>
  </div>
<% end %>

<%= link_to "Back to Categories", categories_path %>
